{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Tests",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/controller",
            "args": [
                "-test.v",
                "-test.run",
                "TestExecuteCommand"
            ],
            "showLog": true,
            "trace": "verbose",
            "stopOnEntry": false,
            "showGlobalVariables": true,
            "showRegisters": false,
            "showDisassembly": false
        },
        {
            "name": "Debug All Tests",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/controller",
            "args": [
                "-test.v"
            ],
            "showLog": true,
            "trace": "verbose",
            "stopOnEntry": false,
            "showGlobalVariables": true
        },
        {
            "name": "Debug Specific Test",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/controller",
            "args": [
                "-test.v",
                "-test.run",
                "${input:testName}"
            ],
            "showLog": true,
            "trace": "verbose",
            "stopOnEntry": false,
            "showGlobalVariables": true
        },
        {
            "name": "Debug TaskWorker Test",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/controller",
            "args": [
                "-test.v",
                "-test.run",
                "TestTaskWorkerWithExpect"
            ],
            "showLog": true,
            "trace": "verbose",
            "stopOnEntry": false,
            "showGlobalVariables": true
        },
        {
            "name": "Debug HTTP Test",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/controller",
            "args": [
                "-test.v",
                "-test.run",
                "TestExecuteHTTPRequest"
            ],
            "showLog": true,
            "trace": "verbose",
            "stopOnEntry": false,
            "showGlobalVariables": true
        }
    ],
    "inputs": [
        {
            "id": "testName",
            "description": "Enter test function name",
            "default": "TestExecuteCommand",
            "type": "promptString"
        }
    ]
}